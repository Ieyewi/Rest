--[[ Test ]]
print("Hello")

--[[ Load Mercury library ]]
local mercuryLibUrl = "https://raw.githubusercontent.com/deeeity/mercury-lib/master/src.lua"
local mercuryLib = game:GetService("HttpService"):GetAsync(mercuryLibUrl)
local mercurySuccess, mercuryError = pcall(function()
    local mercuryEnv = {}
    setfenv(loadstring(mercuryLib), mercuryEnv)()
    return mercuryEnv.Mercury
end)
if not mercurySuccess then
    print("Error loading Mercury library: " .. tostring(mercuryError))
else

--[[ Library ]]
local Mercury = mercuryError

--[[ Make the GUI draggable on mobile devices ]]
local dragStart = nil
local dragDelta = nil

--[[ Gui ]]
local MainGUI = Mercury:Create{
    Name = "Mercury",
    Size = UDim2.fromOffset(600, 400),
    Theme = Mercury.Themes.Dark,
    Link = "https://github.com/philissmart/Mercury-Lib",
}

MainGUI.InputBegan:Connect(function(inputObject)
    if inputObject.UserInputType == Enum.UserInputType.Touch then
        dragStart = inputObject.Position
    end
end)

MainGUI.InputChanged:Connect(function(inputObject)
    if inputObject.UserInputType == Enum.UserInputType.Touch then
        local newPos = Vector2.new(inputObject.Position.X, inputObject.Position.Y)
        dragDelta = newPos - dragStart
        MainGUI:TweenPosition(UDim2.new(0, MainGUI.Position.X.Offset + dragDelta.X, 0, MainGUI.Position.Y.Offset + dragDelta.Y), "Out", "Quad", 0.1, true)
    end
end)

MainGUI.InputEnded:Connect(function(inputObject)
    if inputObject.UserInputType == Enum.UserInputType.Touch then
        dragStart = nil
        dragDelta = Vector2.new(0, 0)
    end
end)

--[[ Tabs ]]
local MainTab = MainGUI:Tab{
    Name = "New Tab",
    Icon = "rbxassetid://8569322835"
}

--[[ Buttons]]
MainTab:AddButton{
    Name = "Fly Gui",
    Callback = function()
              loadstring(game:HttpGet("https://pastebin.com/raw/KicnSF0d"))()
    end
}
end
